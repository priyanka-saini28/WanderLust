<% layout('layouts/boilerplate') %>

    <div class="row mt-4">
        <div class="col-8 offset-2">
            <h3><b><%=listing.title%></b></h3>
        </div>
        <div class="listing-card col-6 offset-2" >
                <img class="card-img-top show-img" src="<%=listing.image.url%>" alt="listing-image ">
                <div class="card-body">
                       
                </div>
                <ul>
                    <p>Owned by <%=listing.owner.username%></p>
                    <li><u> Description</u> : <%=listing.description%></li>
                    <li><u>Price</u> : &#8377;<%= listing.price.toLocaleString("en-IN") %></li>
                    <li><u>Location</u> : <%=listing.location%></li>
                    <li><u>Country</u> : <%=listing.country%></li>
                </ul>
                <div class="btns offset-2">
                <%if(currUser && currUser._id.equals(listing.owner._id)){%>
                    <a href="/listings/<%=listing.id%>/edit" class="btn btn-dark edit-btn">Edit Listing</a>
                    <form action="/listings/<%=listing.id%>/delete?_method=DELETE" method="POST">
                        <button class="btn btn-dark del-btn"> Delete Listing </button>
                    </form>
                <%}%>
                </div>
        </div>
        <div class="review col-6 offset-2">
             
             <% if(currUser) {%>
                <hr>
            <h4>Leave a Review</h4>
         
            <form action="/listings/<%=listing.id%>/reviews"novalidate class=needs-validation method="post">
                <h6>Ratings</h6>
                <fieldset class="starability-slot">
                    
                    
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" required />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]"value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                <div class="mb-3 mt-3">
                    <label for="comment"class="form label ">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="50" rows="4" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add some comments for review.</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <%}%>
            <% if(listing.reviews.length>0){%>
            <div>
            
               <hr>
                <p><b>All Reviews</b></p>
                <div class="row ">
                    <% for(review of listing.reviews){%>
                    <div class="card col-5 ms-3 mb-3 ">
                        <div class="card-body">
                            <h5 class="card-title"><%=review.author.username%></h5>
                            <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                            <p class="card-text"><%=review.comment%></p>
                            
                        </div>
                        <%if(currUser && currUser._id.equals(review.author._id)){%>
                        <form class="mb-3"  action="/listings/<%=listing.id%>/reviews/<%=review.id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                        <%}%>
                    </div>
                  
                  <%}%>
                </div>
             
            </div>
            <%}%>
        </div>
    </div>

